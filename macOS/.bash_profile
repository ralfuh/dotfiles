# ===== PROMPT =====

orange=$(tput setaf 166);
yellow=$(tput setaf 228);
skyblue=$(tput setaf 111);
white=$(tput setaf 15);
bold=$(tput bold);
reset=$(tput sgr0);

# Colors
PS1="\[${orange}\]\u";
PS1+="\[${white}\]@";
PS1+="\[${orange}\]\h ";
PS1+="\[${skyblue}\w\n";
PS1+="\[${white}$:>";
PS1+="\[${reset}\]";

export PS1;
